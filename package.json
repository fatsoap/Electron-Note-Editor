{
  "name": "vite-electron-builder",
  "private": true,
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "node scripts/build.js",
    "precompile": "cross-env MODE=production yarn build",
    "compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "pretest": "yarn build",
    "test": "node tests/app.spec.js",
    "start": "node scripts/watch.js",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,tsx",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "tsx-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "yarn typecheck-main && yarn typecheck-preload && yarn typecheck-renderer"
  },
  "browserslist": [
    "Chrome 93"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "yarn typecheck"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "2.2.0",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "assert": "^2.0.0",
    "cross-env": "7.0.3",
    "electron": "14.0.0",
    "electron-builder": "22.11.7",
    "electron-devtools-installer": "3.2.0",
    "eslint": "7.32.0",
    "lint-staged": "11.1.2",
    "playwright": "1.14.1",
    "simple-git-hooks": "2.6.1",
    "typescript": "4.4.2",
    "vite": "2.5.6"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^0.19.1",
    "@uiw/react-codemirror": "^4.0.1",
    "@uiw/react-md-editor": "^3.6.4",
    "electron-updater": "4.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
